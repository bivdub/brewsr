<% include ../header %>
<div class="container text-center text-block">
	<h2>Search Results</h2>
	<% if (!data) { %>
		<h1>No Results Found!</h1>
	<% } else { %>
	<table class="table table-bordered text-center">
		<thead>
			<tr>
				<th class='text-center'>Beer Info</th>
			</tr>
		</thead>
		<tbody>
			<% for(var i=0; i<data.length; i++) { %>
				<tr>
					<td><a href='/beer/<%=data[i].id%>'><%=data[i].name%></a></td>
				</tr>
			<%}%>
		</tbody>
	</table>
	<% } %>
</div>	

<% include ../footer %>